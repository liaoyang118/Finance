
@{
    ViewBag.Title = "新增总额账单";
}
<div class="row" style="margin-top:1em;">
    <div class="col-md-4 col-xs-0"></div>
    <div class="col-md-4 col-xs-12">
        <form class="form-horizontal" role="form" action="/Home/Add" method="post">
            <div class="form-group">
                <label for="item_name" class="col-sm-3 control-label">项目</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="item_name" name="item_name" required placeholder="请输入项目名称" />
                </div>
            </div>
            <div class="form-group">
                <label for="total_money" class="col-sm-3 control-label">总金额</label>
                <div class="col-sm-9">
                    <input type="number" class="form-control" id="total_money" name="total_money" required placeholder="请输入金额" />
                </div>
            </div>
            <div class="form-group">
                <label for="item_money" class="col-sm-3 control-label">使用量</label>
                <div class="col-sm-9">
                    <input type="number" class="form-control" id="item_money" name="item_money" required placeholder="请输入金额" />
                </div>
            </div>
            <div class="form-group">
                <label for="money_type" class="col-sm-3 control-label">类型</label>
                <div class="col-sm-9">
                    <select id="money_type" name="money_type">
                        <option value="1">总额</option>
                        <option value="2">总额扣减项</option>
                    </select>
                </div>
            </div>
            <div class="form-group">
                <label for="remark" class="col-sm-3 control-label">备注</label>
                <div class="col-sm-9">
                    <input type="text" class="form-control" id="remark" required name="remark" placeholder="请输入金额" value="无" />
                </div>
            </div>
            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" class="btn btn-primary">确定</button>
                    <button type="reset" class="btn btn-primary">重置</button>
                </div>
            </div>
            <div class="form-group">
                @Html.ValidationSummary("", new { @class = "text-danger" })
            </div>
        </form>
    </div>
    <div class="col-md-4 col-xs-0"></div>
</div>

